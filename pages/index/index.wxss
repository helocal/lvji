.index .note .detail .down {
    text-align: center;
    margin-top: 150rpx;
    color: #81848D;
    font-size: 35rpx;
}

.showTime {
    height: 350rpx;
    background-color: white;
    margin: 30rpx auto;
    border-radius: 10rpx;
    position: relative;
}

.showTime .card {
    position: absolute;
    /* left: 5%; */
    font-size: 35rpx;
    display: inline-block;
    height: 250rpx;
    width: 100%;
    /* background-color: blue;ss */
    margin: 16rpx auto;
}

.showTime .card .left {
    float: left;
    height: 80rpx;
    width: 50%;
    border-right: 1px solid #11D6BB;
    border-bottom: 1px solid #11D6BB;
}

.showTime .card .right {
    float: right;
    height: 80rpx;
    width: 50%;
    /* border-right: 1px solid #11D6BB; */
    border-bottom: 1px solid #11D6BB;
}