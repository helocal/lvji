/* 底部样式 */

.footer {
    position: absolute;
    top: 870rpx;
    /* margin: 30rpx auto; */
    /* left: 20%; */
    margin-top: 30rpx;
    left: 50%;
    right: 50%;
    margin-left: -400rpx;
    margin-right: -400rpx;
}

.footer .button {
    background-color: #FFF;
    border: 1px solid #11D6BB;
    border-radius: 50rpx;
    color: #11D6BB;
}

.footer .button-active {
    background-color: #11D6BB;
    color: white;
    border-radius: 50rpx;
    border: 1px solid #11D6BB;
}